{
  "compilerOptions": {
    "target": "es2018",
    "outDir": "build",
    "noImplicitAny": false,
    "strict": true,
    "importHelpers": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "declaration": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "lib": ["es6", "dom"]
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
